/* pages/chatdetail/chatdetail.wxss */

/* 页面容器 */
.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

/* 商品信息卡片 */
.product-card {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: white;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 8rpx;
}

.product-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 24rpx;
}

.product-info {
  flex: 1;
  min-width: 0;
}

.product-title {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.product-price {
  font-size: 32rpx;
  color: #ff6b6b;
  font-weight: bold;
  margin-bottom: 4rpx;
}

.product-tip {
  font-size: 24rpx;
  color: #999;
}

/* 消息容器 */
.messages-container {
  flex: 1;
  background-color: #f5f5f5;
  padding: 20rpx 0;
}

.loading-container {
  display: flex;
  justify-content: center;
  padding: 40rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 消息列表 */
.messages-list {
  padding: 0 24rpx;
}

.message-item {
  display: flex;
  margin-bottom: 40rpx;
  position: relative;
}

.message-sent {
  flex-direction: row-reverse;
}

.message-received {
  flex-direction: row;
}

.message-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin: 0 20rpx;
}

.message-content-wrapper {
  max-width: 500rpx;
  position: relative;
}

/* 普通消息气泡 */
.message-bubble {
  position: relative;
  padding: 20rpx 24rpx;
  border-radius: 12rpx;
  line-height: 1.5;
  word-break: break-all;
}

.sent-bubble {
  background-color: #95ec69;
  border-top-right-radius: 4rpx;
  margin-left: 120rpx;
}

.received-bubble {
  background-color: white;
  border-top-left-radius: 4rpx;
  margin-right: 120rpx;
}

.sent-bubble::after {
  content: '';
  position: absolute;
  top: 20rpx;
  right: -16rpx;
  border: 16rpx solid transparent;
  border-left-color: #95ec69;
  border-right-width: 0;
}

.received-bubble::before {
  content: '';
  position: absolute;
  top: 20rpx;
  left: -16rpx;
  border: 16rpx solid transparent;
  border-right-color: white;
  border-left-width: 0;
}

.message-text {
  font-size: 32rpx;
  color: #333;
}

/* 确认收货气泡 */
.confirm-bubble {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  margin-right: 120rpx;
  min-width: 400rpx;
}

.confirm-title {
  font-size: 32rpx;
  color: #333;
  text-align: center;
  margin-bottom: 40rpx;
  font-weight: bold;
}

.confirm-buttons {
  display: flex;
  gap: 24rpx;
}

.confirm-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  border: none;
}

.confirm-btn.confirm {
  background-color: #07c160;
  color: white;
}

.confirm-btn.cancel {
  background-color: #f5f5f5;
  color: #666;
}

/* 评价气泡 */
.rating-bubble {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  margin-right: 120rpx;
  min-width: 400rpx;
}

.rating-title {
  font-size: 32rpx;
  color: #333;
  text-align: center;
  margin-bottom: 40rpx;
  font-weight: bold;
}

.rating-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.rating-label {
  font-size: 28rpx;
  color: #666;
}

.rating-stars {
  display: flex;
  gap: 16rpx;
}

.star {
  font-size: 40rpx;
  color: #ccc;
  line-height: 1;
}

.star-active {
  color: #ffd700;
}

.rating-comment {
  margin: 40rpx 0;
}

.comment-input {
  width: 100%;
  min-height: 120rpx;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  font-size: 28rpx;
  line-height: 1.5;
  box-sizing: border-box;
  border: 1rpx solid #eee;
}

.comment-tip {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.rating-buttons {
  display: flex;
  gap: 24rpx;
}

.rating-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  border: none;
}

.rating-btn.submit {
  background-color: #07c160;
  color: white;
}

.rating-btn.cancel {
  background-color: #f5f5f5;
  color: #666;
}

/* 消息时间 */
.message-time {
  position: absolute;
  bottom: -30rpx;
  font-size: 22rpx;
  color: #999;
  white-space: nowrap;
}

.message-sent .message-time {
  right: 100rpx;
  text-align: right;
}

.message-received .message-time {
  left: 100rpx;
}

/* 输入区域 */
.input-area {
  background: white;
  border-top: 1rpx solid #eee;
  padding-top: 20rpx;
}

.input-wrapper {
  display: flex;
  align-items: flex-end;
  padding: 0 24rpx 20rpx;
  gap: 20rpx;
}

.message-input {
  flex: 1;
  background: #f8f8f8;
  border-radius: 40rpx;
  padding: 20rpx 32rpx;
  font-size: 32rpx;
  line-height: 1.5;
  max-height: 120rpx;
  min-height: 44px;
  box-sizing: border-box;
  border: 1rpx solid #eee;
}

.input-placeholder {
  color: #ccc;
  font-size: 32rpx;
}

.send-btn {
  width: 120rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  background: #f0f0f0;
  font-size: 32rpx;
  color: #999;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.send-btn-active {
  background: #07c160;
  color: white;
}

.send-btn:disabled {
  opacity: 0.5;
}

.send-text {
  font-size: 32rpx;
}

/* 测试按钮 */
.test-buttons {
  position: fixed;
  bottom: 200rpx;
  left: 0;
  right: 0;
  padding: 0 24rpx;
  z-index: 1000;
}

.test-btn {
  background: #ff6b6b;
  color: white;
  border-radius: 40rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  border: none;
}

/* 响应式设计 */
@media screen and (max-width: 360px) {
  .message-content-wrapper {
    max-width: 70%;
  }
  
  .confirm-bubble,
  .rating-bubble {
    min-width: 350rpx;
  }
}

/* 安全区域适配 */
.safe-area-bottom {
  padding-bottom: env(safe-area-inset-bottom);
}

/* 滚动条样式 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}