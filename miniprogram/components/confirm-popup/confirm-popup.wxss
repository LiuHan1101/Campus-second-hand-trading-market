/* components/confirm-popup/confirm-popup.wxss */
.popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  justify-content: center;
  z-index: 999;
}

.popup-container {
  width: 100%;
  background: #FAF7F2;
  border-radius: 24rpx 24rpx 0 0;
  max-height: 85vh;
  overflow-y: auto;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

/* 弹窗头部 */
.popup-header {
  padding: 40rpx 32rpx 20rpx;
  text-align: center;
  border-bottom: 1rpx solid #E8D7D7;
}

.popup-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #5D534A;
}

/* 协商提示 */
.negotiation-tip {
  display: flex;
  align-items: center;
  background: #F8E8E8;
  margin: 20rpx 32rpx;
  padding: 20rpx;
  border-radius: 12rpx;
  border-left: 4rpx solid #E8B4B8;
}

.tip-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.tip-text {
  font-size: 26rpx;
  color: #8C7B6C;
  line-height: 1.4;
}

/* 表单区域 */
.form-section {
  padding: 0 32rpx;
}

.form-item {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 30rpx;
  color: #5D534A;
  margin-bottom: 16rpx;
  font-weight: 500;
}

/* 时间选择器 */
.date-picker, .time-picker {
  display: inline-block;
  width: 48%;
  margin-right: 4%;
}

.picker-display {
  background: white;
  padding: 20rpx;
  border-radius: 12rpx;
  border: 1rpx solid #D8CFC7;
  font-size: 28rpx;
  color: #8C7B6C;
  text-align: center;
}

.picker-display.has-value {
  color: #5D534A;
  border-color: #E8B4B8;
}

/* 地点输入框 */
.location-input {
  background: white;
  padding: 20rpx;
  border-radius: 12rpx;
  border: 1rpx solid #D8CFC7;
  font-size: 28rpx;
  color: #5D534A;
}

.location-input:focus {
  border-color: #E8B4B8;
}

/* 备注文本框 */
.remark-textarea {
  background: white;
  padding: 20rpx;
  border-radius: 12rpx;
  border: 1rpx solid #D8CFC7;
  font-size: 28rpx;
  color: #5D534A;
  height: 120rpx;
  box-sizing: border-box;
}

.word-count {
  font-size: 24rpx;
  color: #8C7B6C;
  text-align: right;
  display: block;
  margin-top: 8rpx;
}

/* 商品信息 */
.product-info {
  display: flex;
  background: #F5F0EB;
  margin: 20rpx 32rpx;
  padding: 24rpx;
  border-radius: 12rpx;
}

.product-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 24rpx;
}

.product-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.product-title {
  font-size: 28rpx;
  color: #5D534A;
  line-height: 1.4;
  margin-bottom: 12rpx;
}

.product-price {
  font-size: 32rpx;
  color: #E8B4B8;
  font-weight: 600;
}

/* 按钮区域 - 修改为三个按钮布局 */
.button-group {
  display: flex;
  padding: 24rpx 32rpx;
  gap: 16rpx;
}

.btn {
  flex: 1;
  height: 88rpx;
  border: none;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-cancel {
  background: #F0E6E6;
  color: #8C7B6C;
}

.btn-bubble {
  background: #E8B4B8;
  color: white;
  box-shadow: 0 4rpx 16rpx rgba(232, 180, 184, 0.3);
}

.btn-bubble.btn-disabled {
  background: #D8CFC7;
  color: #A8A8A8;
  box-shadow: none;
}

.btn-transaction {
  background: #5D534A;
  color: white;
  box-shadow: 0 4rpx 16rpx rgba(93, 83, 74, 0.3);
}